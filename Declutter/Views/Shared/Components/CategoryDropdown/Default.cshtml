
@{
    ViewData["Title"] = "Default";
}

@model IEnumerable<dynamic> 

<select name="categoryId" id="categoryId" class="form-control me-2" style="min-width: 140px; background: transparent; color: white; border: none; border-bottom: 1px solid #555;">
    <option value="">All Categories</option>
    @foreach (var category in Model)
    {
        <option value="@category.Id" selected="@(category.Id.ToString() == ViewBag.SelectedCategoryId)">
            @category.Name
        </option>
    }
</select>
<style>
    /* Navbar form styles */
    .navbar .d-flex {
        margin-left: auto;
    }

    /* Search input styles */
    .navbar .form-control {
        background: transparent;
        border: none;
        border-bottom: 1px solid #555;
        color: white;
        padding: 0.375rem 0.75rem;
    }

        .navbar .form-control:focus {
            background: transparent;
            box-shadow: none;
            border-color: #fff;
            color: white;
        }

    /* Dropdown styles */
    .navbar select option {
        background-color: #212529;
        color: white;
    }

    .navbar select:focus {
        background: transparent;
        box-shadow: none;
        border-color: #fff;
    }

    /* Search button styles */
    .navbar .btn-search {
        background-color: #212529;
        color: white;
        border: 1px solid #555;
        padding: 0.375rem 1rem;
    }

        .navbar .btn-search:hover {
            background-color: #2c3034;
            border-color: #fff;
        }

    /* Placeholder color */
    .navbar .form-control::placeholder {
        color: rgba(255, 255, 255, 0.65);
    }
</style>



