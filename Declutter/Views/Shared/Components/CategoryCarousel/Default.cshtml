@model IEnumerable<DeclutterHub.Models.Category>

<div class="hero-section mb-4">
    <div id="categoryCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel">
        <div class="carousel-indicators">
            @for (int i = 0; i < Model.Count(); i++)
            {
                <button type="button"
                        data-bs-target="#categoryCarousel"
                        data-bs-slide-to="@i"
                        class="@(i == 0 ? "active" : "")"
                        aria-current="@(i == 0 ? "true" : "false")"
                        aria-label="Slide @(i + 1)">
                </button>
            }
        </div>
        <div class="carousel-inner">
            @{
                var isFirst = true;
                foreach (var category in Model)
                {
                    <div class="carousel-item @(isFirst ? "active" : "")">
                        <div class="carousel-content">
                            @if (!string.IsNullOrEmpty(category.ImageUrl))
                            {
                                <img src="@category.ImageUrl" class="d-block w-100" alt="@category.Name">
                            }
                            <div class="carousel-caption">
                                <div class="caption-content">
                                    <h2 class="display-4 mb-3">@category.Name</h2>
                                    <p class="lead mb-4">@category.Description</p>
                                    <a href="@Url.Action("ItemsByCategory", "Items", new { categoryId = category.Id })"
                                       class="btn btn-primary btn-lg">
                                        <i class="bi bi-arrow-right-circle me-2"></i>Explore Now
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    isFirst = false;
                }
            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#categoryCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#categoryCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>