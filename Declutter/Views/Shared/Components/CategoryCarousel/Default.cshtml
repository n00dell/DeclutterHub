@model IEnumerable<DeclutterHub.Models.Category>

<div id="categoryCarousel" class="carousel slide category-carousel" data-bs-ride="carousel">
    <div class="carousel-indicators">
        @for (int i = 0; i < 4; i++)
        {
            <button type="button"
                    data-bs-target="#categoryCarousel"
                    data-bs-slide-to="@i"
                    class="@(i == 0 ? "active" : "")"
                    aria-current="@(i == 0 ? "true" : "false")"
                    aria-label="Slide @(i + 1)">
            </button>
        }
    </div>

    <div class="carousel-inner">
        @{
            var isFirst = true;
            foreach (var category in Model)
            {
                <div class="carousel-item @(isFirst ? "active" : "")">
                    <div class="carousel-content">
                        <div class="carousel-text">
                            <h2 class="carousel-title">@category.Name</h2>
                            <p class="carousel-description">@category.Description</p>
                        </div>
                        <div class="carousel-image">
                            <img src="@category.ImageUrl" alt="@category.Name">
                        </div>
                    </div>
                </div>
                isFirst = false;
            }
        }
    </div>

    <button class="carousel-control-prev" type="button" data-bs-target="#categoryCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#categoryCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>