@model IEnumerable<DeclutterHub.Models.Item>

<h2>@ViewBag.CategoryName Items</h2>

@if (!Model.Any())
{
    <p>No items found.</p>
}
else
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card">
                    <img src="@item.Images.FirstOrDefault()?.Url" class="card-img-top" alt="@item.Name">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Description</p>
                        <p class="card-text">Price: @item.Price.ToString("C")</p>
                        <a href="@Url.Action("Details", "Items", new { id = item.Id })" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
}



