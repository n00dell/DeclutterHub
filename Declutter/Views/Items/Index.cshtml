@model IEnumerable<DeclutterHub.Models.Item>

<div class="container mt-4">
    <h1>My Items</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    @if (item.Images != null && item.Images.Any())
                    {
                        <img src="@item.Images.First().Url" class="card-img-top" alt="@item.Name">
                    }
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Description</p>
                        <p class="card-text">
                            <strong>Price:</strong> Ksh.@item.Price
                            @if (item.IsNegotiable)
                            {
                                <span>(Negotiable)</span>
                            }
                        </p>
                        <p class="card-text"><strong>Category:</strong> @item.Category.Name</p>
                        <div class="btn-group">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                            @if (!item.IsSold)
                            {
                                <button type="button"
                                        class="btn btn-success"
                                        data-bs-toggle="modal"
                                        data-bs-target="#confirmSoldModal"
                                        data-item-id="@item.Id"
                                        data-item-name="@item.Name">
                                    Mark as Sold
                                </button>
                            }
                            else
                            {
                                <span class="btn btn-secondary disabled">Sold</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Confirmation Modal -->
<div class="modal fade" id="confirmSoldModal" tabindex="-1" aria-labelledby="confirmSoldModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmSoldModalLabel">Confirm Sale</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to mark "<span id="itemName"></span>" as sold?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success" id="confirmSoldButton">Yes, Mark as Sold</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Store the item ID when the modal is opened
        let currentItemId = null;

        $('#confirmSoldModal').on('show.bs.modal', function (event) {
            const button = $(event.relatedTarget);
            currentItemId = button.data('item-id');
            const itemName = button.data('item-name');
            $('#itemName').text(itemName);
        });

        // Handle the confirmation
        $('#confirmSoldButton').click(function() {
            if (currentItemId) {
                $.post('/Items/MarkAsSold/' + currentItemId, function(response) {
                    // Close the modal
                    $('#confirmSoldModal').modal('hide');
                    // Reload the page to show updated status
                    location.reload();
                }).fail(function(error) {
                    alert('Error marking item as sold. Please try again.');
                });
            }
        });
    </script>
}