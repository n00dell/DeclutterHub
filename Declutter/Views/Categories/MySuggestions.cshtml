@model IEnumerable<DeclutterHub.Models.Category>

@{
    ViewData["Title"] = "My Category Suggestions";
}

<style>
    .category-card {
        position: relative;
        height: 300px;
        overflow: hidden;
        border-radius: 8px;
    }

    .category-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .card-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background: linear-gradient(to top, rgba(0,0,0,0.9), rgba(0,0,0,0.5), transparent);
        color: white;
        padding: 20px;
    }

        .card-overlay h5 {
            color: white;
            margin-bottom: 10px;
        }

        .card-overlay p {
            color: rgba(255, 255, 255, 0.9);
            font-size: 0.9rem;
            margin-bottom: 15px;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

    .no-image-placeholder {
        width: 100%;
        height: 100%;
        background-color: #f8f9fa;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #6c757d;
    }
</style>

<div class="container my-4">
    <div class="row mb-4">
        <div class="col">
            <h2>My Category Suggestions</h2>
            <p class="text-muted">View and track the status of categories you've suggested</p>
        </div>
        <div class="col-auto">
            <a asp-action="Suggest" class="btn btn-primary">
                <i class="fas fa-plus"></i> Suggest New Category
            </a>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <p class="mb-0">You haven't suggested any categories yet. Why not <a asp-action="Suggest">suggest one now</a>?</p>
        </div>
    }
    else
    {
        @if (Model.Any(c => c.IsApproved))
        {
            <h4 class="mb-3">Approved Categories</h4>
            <div class="row">
                @foreach (var category in Model.Where(c => c.IsApproved))
                {
                    <div class="col-md-4 mb-4">
                        <div class="category-card shadow">
                            @if (!string.IsNullOrEmpty(category.ImageUrl))
                            {
                                <img src="@category.ImageUrl" class="category-img" alt="@category.Name" />
                            }
                            else
                            {
                                <div class="no-image-placeholder">
                                    <i class="fas fa-image fa-3x"></i>
                                </div>
                            }
                            <div class="card-overlay">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    @if (category.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Inactive</span>
                                    }
                                    <small>
                                        <i class="fas fa-mouse-pointer"></i> @category.ClickCount
                                    </small>
                                </div>
                                <h5>@category.Name</h5>
                                <p>@category.Description</p>
                                <a href="@Url.Action("ItemsByCategory", "Items", new { categoryId = category.Id })"
                                   class="btn btn-primary btn-sm w-100">View Items</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }

        @if (Model.Any(c => !c.IsApproved))
        {
            <h4 class="mb-3">Pending Approval</h4>
            <div class="row">
                @foreach (var category in Model.Where(c => !c.IsApproved))
                {
                    <div class="col-md-4 mb-4">
                        <div class="category-card shadow">
                            @if (!string.IsNullOrEmpty(category.ImageUrl))
                            {
                                <img src="@category.ImageUrl" class="category-img" alt="@category.Name" />
                            }
                            else
                            {
                                <div class="no-image-placeholder">
                                    <i class="fas fa-image fa-3x"></i>
                                </div>
                            }
                            <div class="card-overlay">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="badge bg-warning">Pending Review</span>
                                    <small>
                                        @category.CreatedAt.ToString("MMM dd")
                                    </small>
                                </div>
                                <h5>@category.Name</h5>
                                <p>@category.Description</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    }
</div>