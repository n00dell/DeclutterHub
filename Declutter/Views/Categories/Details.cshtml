@model DeclutterHub.Models.Category

<h2>@Model.Name</h2>

@if (Model.Items != null && Model.Items.Any())
{
    <ul>
        @foreach (var item in Model.Items)
        {
            <li>@item.Name - @item.Price</li>
        }
    </ul>
}
else
{
    <p>No items found in this category.</p>
}
