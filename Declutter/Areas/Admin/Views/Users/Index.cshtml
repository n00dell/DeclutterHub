@model IEnumerable<DeclutterHub.Models.User>
@{
    ViewData["Title"] = "Manage Users";
    Layout = "/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Manage Users</h2>
<p>
    <a asp-controller="Users" asp-action="Create">Create new</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Member Since</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
          
            <tr>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>@user.CreatedAt.ToString("MMM dd, yyyy")</td>
                <td>
                    <a asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Edit</a>
                    <form asp-controller="Users" asp-action="Delete" asp-route-id="@user.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
